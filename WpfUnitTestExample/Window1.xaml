<Window x:Class="WpfUnitTestExample.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUnitTestExample"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    
        <Grid Height="Auto" Width="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
            <Rectangle Visibility="Hidden" Fill="Red" Stroke="IndianRed" Height="90" Width="30" StrokeThickness="5" DockPanel.Dock="Top" VerticalAlignment="Top">

            </Rectangle>
            <Rectangle Grid.Row="1" MaxHeight="50" DockPanel.Dock="Bottom" Fill="DeepSkyBlue" Stroke="CornflowerBlue" Height="50" Width="50" StrokeThickness="5" ></Rectangle>
        </Grid>
    
</Window>
